<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                 
                            
                                                                        
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg" android:tag="layout/activity_modify_boss_psw_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/white" />

        <include
            layout="@layout/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:layout_below="@+id/view" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool_bar"
            android:background="@color/white"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_28">

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_28"
                    android:maxLines="1"
                    android:hint="旧密码"
                    android:textSize="@dimen/sp_7"
                    android:drawableLeft="@mipmap/mima"
                    android:drawablePadding="@dimen/dp_5"
                    android:inputType="numberPassword"
                    android:tag="binding_1"               />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_28"
                app:counterMaxLength="6">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_28"
                    android:hint="新密码"
                    android:maxLines="1"
                    android:drawableLeft="@mipmap/mima"
                    android:drawablePadding="@dimen/dp_5"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:textSize="@dimen/sp_7"
                    android:tag="binding_2"               />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_28">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_28"
                    android:hint="再次确认新密码"
                    android:maxLines="1"
                    android:drawableLeft="@mipmap/mima"
                    android:drawablePadding="@dimen/dp_5"
                    android:inputType="numberPassword"
                    android:textSize="@dimen/sp_7"
                    android:tag="binding_3"                   />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/ok_btn"
            style="@style/ButtonNormalAlignBottomEnableFull"
            android:tag="binding_4"                  
            android:text="提交" />

    </RelativeLayout>
         