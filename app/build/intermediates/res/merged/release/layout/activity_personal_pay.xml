<?xml version="1.0" encoding="utf-8"?>

                                                        

    
                                              
                 
                            
                                                           
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent" android:tag="layout/activity_personal_pay_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <include
            android:id="@+id/view_tool_bar"
            layout="@layout/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"

            android:layout_below="@+id/view_tool_bar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_personal_pay_warn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_money"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/tv_personal_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_QR_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tag="binding_1"                                           
                    />
                <TextView
                    android:id="@+id/tv_personal_xianjin_pay"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_circle_blue"
                    android:text="确认收款"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:tag="binding_2"                  
                                                              
                                                                                      
                    ></TextView>

            </RelativeLayout>


        </LinearLayout>
        <Button
            android:id="@+id/bt_personal_pay_commit"
            style="@style/ButtonNormalAlignBottomEnableFull"
            android:tag="binding_3"                  
                                                      
                                                                              
            android:text="确认收款" />
    </RelativeLayout>

         