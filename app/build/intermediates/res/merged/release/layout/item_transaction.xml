<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                                                  
                                                  

                 
                                
                                                                   
           

    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@android:color/white"
        android:clipChildren="true"
        android:orientation="horizontal" android:tag="layout/item_transaction_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="2"
            android:gravity="center"
            android:tag="binding_1"                                          
            android:textSize="@dimen/sp_7"
            tools:text="2017-09-06 21:00" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:tag="binding_2"                   
            android:textColor="@color/text_money"
            android:textSize="@dimen/sp_7"
            tools:text="￥6.00" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_item_achivement_payType"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:tag="binding_3"                                              
                android:textSize="@dimen/sp_7"
                tools:text="会员卡" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="(有退款)"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@+id/tv_item_achivement_payType"
                android:tag="binding_4"                                              
                android:textSize="@dimen/sp_7"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:tag="binding_5"                  
            android:textSize="@dimen/sp_7"
            tools:text="充值" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_1"
                android:paddingBottom="@dimen/dp_1"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:layout_gravity="center"
                android:scaleType="center"
                android:background="@drawable/shape_b_input"
                android:textColor="@color/color_main"
                android:text="详情"/>
        </FrameLayout>




    </LinearLayout>
         