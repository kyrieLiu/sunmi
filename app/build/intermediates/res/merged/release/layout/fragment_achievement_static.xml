<?xml version="1.0" encoding="utf-8"?>

                                                        

    


                                          

                 
                            
                                                                             
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_achievement_static_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_1"                                                                                                                      
            >

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"

                android:background="@color/white"
                android:layout_height="wrap_content">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_40"
                    app:tabIndicatorColor="@color/common_red"
                    app:tabIndicatorHeight="1dp"
                    app:tabSelectedTextColor="@color/common_red" />
            </ScrollView>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/scrollView" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/noneDataIv"
            style="@style/NoneDataIv"
            android:src="@mipmap/none_data"
            android:tag="binding_2"                                                    />


        <ImageView
            android:id="@+id/networkErrorIv"
            style="@style/NetworkErrorIv"
            android:tag="binding_3"                                  
            android:src="@mipmap/network_error"
                                                                                           />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="binding_4"                                                  >

            <ProgressBar
                android:id="@+id/progressbar"
                style="@style/RequestProgressStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </RelativeLayout>

         