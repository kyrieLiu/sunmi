<?xml version="1.0" encoding="utf-8"?>

                                                   

    

                                                   
                                                 
                 
                                
                                                                                   
           

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42" android:tag="layout/item_employee_performance_3_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layerType="software"
            android:src="@drawable/dash_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_5"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:tag="binding_1"                                 
                    android:textSize="@dimen/sp_7"
                    tools:text="张三:" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2.5"
                    android:layout_toRightOf="@+id/name"
                    android:tag="binding_2"                       
                    android:textSize="@dimen/sp_7"
                    tools:text="12345678911" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:tag="binding_3"                                                
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/sp_7"
                    tools:text="2017-05-02 20:08:20" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">

                <TextView
                    android:id="@+id/card_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="卡号："
                    android:textSize="@dimen/sp_7"
                    tools:text="卡号:" />

                <TextView
                    android:id="@+id/card_no_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2.5"
                    android:layout_toRightOf="@+id/card_tv"
                    android:tag="binding_4"                            
                    android:textSize="@dimen/sp_7"
                    tools:text="5678178956325687" />

                <TextView
                    android:id="@+id/vip_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:tag="binding_5"                                                                     
                    android:textColor="@color/text_money"
                    android:textSize="@dimen/sp_7"
                    tools:text="¥400" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

         