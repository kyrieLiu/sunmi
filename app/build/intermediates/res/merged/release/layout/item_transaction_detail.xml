<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                                                  

                                           

                 
                                
                                                                         
           

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:color/white" android:tag="layout/item_transaction_detail_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:tag="binding_1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:tag="binding_2"                              
                    android:textSize="@dimen/sp_7_5"
                                                                                                               
                    tools:text="(活体)" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_7"
                        android:text="绩效："/>

                    <TextView
                        android:id="@+id/employee_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:tag="binding_3"                 
                                                                                                                   
                        android:textSize="@dimen/sp_7"
                        tools:text="吕西施" />


                </LinearLayout>

            </RelativeLayout>

            <include layout="@layout/line_h_normal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_or_margin"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="5dp"
                        android:tag="binding_4"                   
                                                                                                                   
                        android:textSize="@dimen/sp_7"
                        tools:text="比熊犬" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:tag="binding_5"                                                                    
                                                                      
                                                                                
                                                                          
                                                                                          
                            android:textSize="@dimen/sp_7"
                            tools:text="￥50" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_line_light"
                            android:visibility="gone"
                            android:tag="binding_6"                             
                                                                                          
                            tools:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:tag="binding_7"              
                                android:textColor="@color/text_light"
                                android:textSize="@dimen/sp_6_5"
                                tools:text="￥80" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:tag="binding_8"                                               
                                                                                                               
                    tools:text="× 3" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/total_money_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:tag="binding_9"                         
                        android:textSize="@dimen/sp_7"
                        tools:text="总价：￥150" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dp"
                        android:text="(已退款)"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:textSize="@dimen/sp_6_5"
                        android:tag="binding_10"                                                      
                        />


                </LinearLayout>

            </RelativeLayout>

            <include layout="@layout/line_h_normal"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/padding_or_margin"
                android:layout_gravity="right|center">
                <TextView
                    android:id="@+id/modify_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_12"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_press_button_empty"
                    android:gravity="center"
                    android:tag="binding_11"                                    
                    android:text="修改绩效"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:textColor="@color/color_main"
                    android:textSize="@dimen/sp_6"
                                                                                                                                   
                    tools:text="修改绩效" />
                <Button
                    android:id="@+id/refund_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginLeft="10dp"
                    android:text="退款"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_6"
                    android:textColor="@color/common_red"
                    android:tag="binding_12"                             
                    android:background="@drawable/shape_red_input"
                    android:gravity="center"
                                                                                          
                    />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:tag="binding_13"                                                      >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_6"
                    android:tag="binding_14"                  
                                                                        
                                                                    
                    tools:text="参与折上折" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line_dark"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zengsong"
            android:tag="binding_15"                                                       />

    </RelativeLayout>
         